{
  "name": "@spothero/stylelint-config",
  "version": "2.0.0",
  "description": "SpotHero's base stylelint configuration.",
  "main": "index.js",
  "repository": "https://github.com/spothero/stylelint-config",
  "author": "SpotHero",
  "license": "Apache-2.0",
  "eslintConfig": {
    "extends": [
      "@spothero",
      "plugin:prettier/recommended",
      "prettier/babel",
      "prettier/react"
    ]
  },
  "prettier": "@spothero/prettier-config",
  "scripts": {
    "release": "npm-release -- public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "stylelint": "13.6.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-prettier": "1.1.2",
    "stylelint-scss": "3.18.0"
  },
  "devDependencies": {
    "@spothero/commitlint-config": "2.2.0",
    "@spothero/eslint-config": "1.9.1",
    "@spothero/npm-publisher": "2.4.1",
    "@spothero/prettier-config": "0.1.1"
  },
  "peerDependencies": {
    "@spothero/prettier-config": "^0.1.1"
  },
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.12.0"
  }
}
